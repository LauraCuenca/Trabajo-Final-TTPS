<%= form_with(model: @user, url: users_path, method: :post, html: { class: "form-horizontal container-sm" }) do |f| %>

  <h2>Registrar Usuario</h2> <br>

    <div class="form-group">
    <%= f.label :username, "Nombre de usuario", class: "control-label" %>
    <%= f.text_field :username, class: "form-control", required: true  %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Correo electrónico", class: "control-label" %>
    <%= f.email_field :email, class: "form-control", required: true  %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Teléfono", class: "control-label" %>
    <%= f.text_field :phone, class: "form-control", required: true  %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña", class: "control-label" %>
    <%= f.password_field :password, class: "form-control", required: true  %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar contraseña", class: "control-label" %>
    <%= f.password_field :password_confirmation, class: "form-control", required: true  %>
  </div>

  <div class="form-group">
    <%= f.label :joined_on, "Fecha de ingreso", class: "control-label" %>
    <%= f.date_field :joined_on, class: "form-control" , required: true %>
  </div>

<div class="form-group">
  <%= f.label :roles, "Roles", class: "control-label" %>
  <%= f.select :role_ids, 
      @roles.map { |role| [role.name, role.id] }, 
      {}, 
      { class: "form-control", required: true } %>
</div>


  <div class="actions">
    <%= f.submit "Registrar" %>
  </div>
<% end %>